function init()
	pStart = mgGetBool("start", true)
	pEnd = mgGetBool("end", true)

	mgMusic("27")
-- 	mgReverb(0.2, 0.8, 0.3)
-- 	mgEcho(0.3, 0.2, 0.5, 0.5)
	mgFogColor(0.7, 0.7, 0.9, 0.4, 0.4, 0.8)
    mgParticles("bubbles")
    mgGravity(0.65)

	confSegment("sky/sky0/16_0", 1)
    confSegment("sky/sky0/16_1", 1)
    confSegment("sky/sky0/16_2", 1)
	
	l = 0
	
-- 	if pStart then
-- 		l = l + mgSegment("basic/basic/start", -l)	
-- 	end

	local targetLen = 180
	while l < targetLen do
		s = nextSegment()
		l = l + mgSegment(s, -l)
	end
    
	mgLength(l)
end

function tick()
end
